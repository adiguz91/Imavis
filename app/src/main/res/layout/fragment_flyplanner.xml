<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.drone.imavis.mvp.ui.flyplanner.moduleFlyplanner.FlyplannerFragment">


    <fragment
        android:id="@+id/flyplannerMap"
        android:name="com.drone.imavis.mvp.ui.flyplanner.moduleFlyplanner.map.GoogleMapFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- xmlns:android="http://schemas.android.com/apk/res/android" -->
    <!--<fragment
        android:layout_weight="0"
        android:id="@+id/flyplannerMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.drone.imavis.mvp.ui.flyplanner.moduleFlyplanner.map.FlyplannerMap" />
        -->


    <!-- draw nodes -->
    <com.drone.imavis.mvp.services.flyplan.mvc.view.FlyPlanView
        android:id="@+id/flyplannerDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/droneFlyingState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/drone_flying_state" />

    <include
        android:id="@+id/includeWaypoint"
        layout="@layout/view_action_buttons_waypoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <!-- seekbar -->

    <com.github.jorgecastilloprz.FABProgressCircle xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/flyplanner_fab_pc_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- You can change it with the fab from the library you want to use -->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/flyplanner_fab_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:borderWidth="0dp"
            app:fab_size="mini"
            app:elevation="4dp"
            app:rippleColor="#ffffff" />
    </com.github.jorgecastilloprz.FABProgressCircle>

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />


</android.support.constraint.ConstraintLayout>
