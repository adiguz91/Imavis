<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:name="com.drone.imavis.mvp.ui.flyplanner.moduleFlyplanner.FlyplannerFragment"
        android:id="@+id/flyplanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_flyplanner" />

    <!-- replaces the actionbar -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_alignParentLeft="true">

                <android.support.design.widget.FloatingActionButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/flyplanner_fab_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:tint="@color/white"
                    app:fabSize="mini" />

                <TextView
                    android:id="@+id/batteryLevel"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_battery"
                    android:layout_margin="4dp"
                    android:textAlignment="center"
                    android:paddingTop="12dp"
                    android:paddingRight="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="100%" android:backgroundTint="@color/md_green_700"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end|right"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <com.github.clans.fab.FloatingActionMenu
                    android:id="@+id/flyplanner_fab_mapType_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end|center_vertical"
                    android:clickable="false"
                    android:fillAfter="false"
                    fab:menu_showShadow="true"
                    fab:menu_shadowColor="#66000000"
                    fab:menu_shadowRadius="2dp"
                    fab:menu_shadowXOffset="0dp"
                    fab:menu_shadowYOffset="0dp"
                    fab:menu_fab_size="mini"
                    fab:menu_colorNormal="@color/colorPrimaryDark"
                    fab:menu_colorPressed="@color/colorPrimary"
                    fab:menu_colorRipple="#99FFFFFF"
                    fab:menu_animationDelayPerItem="50"
                    fab:menu_icon="@drawable/fab_add"
                    fab:menu_buttonSpacing="0dp"
                    fab:menu_labels_margin="0dp"
                    fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
                    fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
                    fab:menu_labels_paddingTop="4dp"
                    fab:menu_labels_paddingRight="8dp"
                    fab:menu_labels_paddingBottom="4dp"
                    fab:menu_labels_paddingLeft="8dp"
                    fab:menu_labels_padding="8dp"
                    fab:menu_labels_textColor="#FFFFFF"
                    fab:menu_labels_textSize="14sp"
                    fab:menu_labels_cornerRadius="3dp"
                    fab:menu_labels_colorNormal="@color/colorPrimary"
                    fab:menu_labels_colorPressed="@color/colorPrimary"
                    fab:menu_labels_colorRipple="#66FFFFFF"
                    fab:menu_labels_showShadow="true"
                    fab:menu_labels_singleLine="false"
                    fab:menu_labels_ellipsize="none"
                    fab:menu_labels_maxLines="-1"
                    fab:menu_labels_position="left"
                    fab:menu_openDirection="down">

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/flyplanner_fab_mapType_menu_satellite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_modern_satellite"
                        fab:fab_colorNormal="@color/colorPrimary"
                        fab:fab_colorPressed="@color/colorPrimary"
                        fab:fab_size="mini"
                        fab:fab_label="Satellite" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/flyplanner_fab_mapType_menu_terrain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_mountain_range"
                        fab:fab_colorNormal="@color/colorPrimary"
                        fab:fab_colorPressed="@color/colorPrimary"
                        fab:fab_size="mini"
                        fab:fab_label="Terrain" />

                </com.github.clans.fab.FloatingActionMenu>

                <android.support.design.widget.FloatingActionButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/flyplanner_fab_droneCalibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_calibration_compass"
                    android:layout_margin="4dp"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:tint="@color/white"
                    app:fabSize="mini"
                    android:tooltipText="Calibration"/>

                <android.support.design.widget.FloatingActionButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/flyplanner_fab_droneConnectWifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:tint="@color/white"
                    app:fabSize="mini"/>

                <android.support.design.widget.FloatingActionButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/flyplanner_fab_currentGpsPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:tint="@color/white"
                    app:fabSize="mini"/>

                <android.support.design.widget.FloatingActionButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/flyplanner_fab_mapLock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:tint="@color/white"
                    app:fabSize="mini"/>

                <android.support.design.widget.FloatingActionButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/flyplanner_fab_flyplanSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:tint="@color/white"
                    app:fabSize="mini"/>

            </LinearLayout>

    </RelativeLayout>

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="62dp"
        android:gravity="right">

        <LinearLayout
            android:id="@+id/nodeHeightLayout"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/layout_background_round"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="10m"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_width="22dp"
                android:layout_height="150dp">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                    android:id="@+id/nodeHeightSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:splitTrack="false"
                    app:seekBarRotation="CW90" /> <!-- Rotation: CW90 or CW270 -->
            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/iconTextViewLoginAppIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginBottom="6dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:padding="2dp"
                android:radius="4dp"
                android:shadowRadius="0"
                android:text="{fa-i-cursor}"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>