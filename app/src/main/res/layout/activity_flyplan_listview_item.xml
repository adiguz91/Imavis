<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flyplanItemSwipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="10">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/iconTextViewFlyplanListViewItemEdit"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:text="{fa-pencil-square-o}"
            android:shadowRadius="0"
            android:textSize="40sp"
            android:background="@color/green"
            android:textColor="#FF053D00"
            android:gravity="center_vertical" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/iconTextViewFlyplanListViewItemDelete"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="{fa-trash-o}"
            android:padding="10dp"
            android:shadowRadius="0"
            android:textSize="40sp"
            android:background="@color/red"
            android:textColor="#FF500D00"
            android:gravity="center_vertical" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_selector"
        android:orientation="horizontal">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/iconTextViewFlyplanListViewItemShowProjectIcon"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="{fa-paper-plane-o}"
            android:padding="10dp"
            android:shadowRadius="0"
            android:textSize="40sp"
            android:background="@color/green"
            android:textColor="#FF053D00"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_selector"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewFlyplanListViewItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flyplanname"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewFlyplanListViewItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flyplan description ..."
                android:textSize="16dp"
                android:textStyle="normal"/>
        </LinearLayout>
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>