<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="48dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.drone.imavis.mvp.ui.tabs.projects.ProjectsFragment">

    <ListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/projectSwipeListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_selector"
        android:padding="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddProject"
        app:fabSize="normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="bottom|right|end"
        app:layout_behavior="com.drone.imavis.mvp.util.FabLayoutBehavior"
        android:transitionName="transition_reveal_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>